
{
  "appId": "com.nextgenarcadia.app",
  "productName": "Next Gen Arcadia",
  "directories": {
    "output": "release/"
  },
  "files": [
    "dist/**/*",
    "electron/**/*"
  ],
  "extraResources": [
    {
      "from": "public",
      "to": "public",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "public/favicon.ico"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "public/favicon.ico"
  },
  "linux": {
    "target": [
      "AppImage"
    ],
    "icon": "public/favicon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
